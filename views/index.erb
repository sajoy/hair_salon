<div class="main col-md-8 main_content">

  <h2> Stylist Master List </h2>

  <% if @stylists.any?() %>
    <ul>
      <% @stylists.each() do |stylist| %>
        <li>  <a class="btn btn-block btn-lg btn-primary" href="/stylist/<%= stylist.id() %>"> <%= stylist.name() %> </a></li>
      <% end %>


    </ul>

  <% else %>
    <h3> No Stylists Yet. Hire someone! </h3>
  <% end %>

</div>

<div class="col-md-4 sidebar">
  <h2> Add Stylist </h2>
  <form action="/add_stylist" method="post">
    <label for="name">Stylist Name</label>
    <input class ="form-control" id="name" name="name" type="text">
    <button class = "btn btn-success" type="submit">Add Stylist</button>
  </form>
</div>
